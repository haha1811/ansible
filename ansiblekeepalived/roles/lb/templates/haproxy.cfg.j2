global
    log /dev/log local0
    log /dev/log local1 notice
    user haproxy
    group haproxy
    daemon
    maxconn {{ haproxy_maxconn }}

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect {{ haproxy_timeout_connect }}
    timeout client  {{ haproxy_timeout_client }}
    timeout server  {{ haproxy_timeout_server }}

frontend https_in
    bind *:443 ssl crt {{ haproxy_cert_dir }}/{{ haproxy_cert_file }}
    mode http
    default_backend web_servers

frontend http_in
    bind *:80
    redirect scheme https if !{ ssl_fc }

backend web_servers
    mode http
    balance roundrobin
    option httpchk GET /
{% for s in haproxy_backends %}
    server {{ s.name }} {{ s.address }}:{{ s.port }} check
{% endfor %}

